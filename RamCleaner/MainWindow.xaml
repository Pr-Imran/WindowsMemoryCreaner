<Window x:Class="RamCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RamCleaner"
        mc:Ignorable="d"
        Title="Safe RAM Cleaner" Height="630" Width="450"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Stats -->
            <RowDefinition Height="Auto"/> <!-- Manual -->
            <RowDefinition Height="Auto"/> <!-- Auto Clean -->
            <RowDefinition Height="*"/>    <!-- Log -->
        </Grid.RowDefinitions>

        <!-- 1. Detailed Statistics -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="System Memory Status" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" Foreground="#333"/>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Total Physical RAM" Foreground="#666"/>
                    <TextBlock Grid.Column="1" Text="{Binding TotalRam}" FontWeight="SemiBold"/>
                </Grid>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Used RAM" Foreground="#666"/>
                    <TextBlock Grid.Column="1" Text="{Binding UsedRamDisplay}" FontWeight="Bold" Foreground="#C0392B"/>
                </Grid>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Available RAM" Foreground="#666"/>
                    <TextBlock Grid.Column="1" Text="{Binding FreeRamDisplay}" FontWeight="Bold" Foreground="#27AE60"/>
                </Grid>

                <Separator Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Cached (Standby)" Foreground="#888" FontSize="12"/>
                    <TextBlock Grid.Column="1" Text="{Binding CachedRamDisplay}" FontSize="12"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBlock Text="Committed / Limit" Foreground="#888" FontSize="12"/>
                    <TextBlock Grid.Column="1" Text="{Binding CommittedRamDisplay}" FontSize="12"/>
                </Grid>

                <ProgressBar Height="6" Minimum="0" Maximum="100" Value="{Binding RamLoadPercent}" Background="#EEE" BorderThickness="0" Foreground="#3498DB"/>
            </StackPanel>
        </Border>

        <!-- 2. Manual Clean -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <Button Command="{Binding CleanCommand}" Content="Clean Memory Now" 
                    FontSize="14" FontWeight="Bold" Padding="0,12" 
                    Background="#3498DB" Foreground="Black" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="{Binding LastCleanStatus}" HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="#555" FontSize="13"/>
        </StackPanel>

        <!-- 3. Auto Clean Strategies -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Auto-Clean Strategies" FontWeight="Bold"/>
                    <!-- Startup Checkbox -->
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsStartupEnabled}" Content="Run on Windows Startup" Margin="0"/>
                </Grid>
                
                <!-- A. Threshold Strategy -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsThresholdCleanEnabled}" Content="Usage >" />
                    
                    <Slider Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True"
                            Value="{Binding AutoCleanThreshold}" IsEnabled="{Binding IsThresholdCleanEnabled}"
                            VerticalAlignment="Center" Margin="5,0"/>
                    
                    <TextBlock Grid.Column="2" Text="{Binding AutoCleanThreshold, StringFormat={}{0}%}" 
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>

                <!-- B. Timer Strategy -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsTimeCleanEnabled}" Content="Every" />
                    
                    <Slider Grid.Column="1" Minimum="0" Maximum="60" TickFrequency="1" IsSnapToTickEnabled="True"
                            Value="{Binding AutoCleanIntervalMinutes}" IsEnabled="{Binding IsTimeCleanEnabled}"
                            VerticalAlignment="Center" Margin="18,0,5,0"/>

                    <TextBlock Grid.Column="2" Text="{Binding AutoCleanIntervalMinutes, StringFormat={}{0} min}" 
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 4. Logs -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Margin="0,0,0,5">
                <TextBlock Text="Event Log" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                <Button Command="{Binding ClearLogCommand}" Content="Clear" HorizontalAlignment="Right" Padding="8,2" FontSize="11"/>
            </Grid>
            
            <ListView Grid.Row="1" ItemsSource="{Binding Logs}" BorderThickness="1" BorderBrush="#EEE" FontSize="11">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="60"/>
                        <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="310"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
