<Window x:Class="RamCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RamCleaner"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=AppTitle}" Height="650" Width="480"
        ResizeMode="CanResize"
        Icon="pack://application:,,,/OptiRam.ico"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,2,0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Stats -->
                <RowDefinition Height="Auto"/> <!-- Manual -->
                <RowDefinition Height="Auto"/> <!-- Tabs (Auto, Whitelist, Options) -->
                <RowDefinition Height="Auto"/> <!-- Log -->
            </Grid.RowDefinitions>

            <!-- 1. Detailed Statistics & Graph -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=SystemMemoryStatus}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
                
                <!-- Stats Grid -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=UsedRAM}" Foreground="#666" FontSize="11"/>
                        <TextBlock Text="{Binding UsedRamDisplay}" FontWeight="Bold" Foreground="#C0392B" FontSize="14"/>
                        <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=AvailableRAM}" Foreground="#666" FontSize="11" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding FreeRamDisplay}" FontWeight="Bold" Foreground="#27AE60" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                         <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=TotalPhysicalRAM}" Foreground="#666" FontSize="11"/>
                         <TextBlock Text="{Binding TotalRam}" FontWeight="SemiBold"/>
                         <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=CachedStandby}" Foreground="#666" FontSize="11" Margin="0,5,0,0"/>
                         <TextBlock Text="{Binding CachedRamDisplay}" FontSize="12"/>
                         <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=CommittedLimit}" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
                         <TextBlock Text="{Binding CommittedRamDisplay}" FontSize="12"/>
                    </StackPanel>
                </Grid>

                <!-- Graph -->
                <Border BorderBrush="#EEE" BorderThickness="1" Background="#FAFAFA" Height="60" Margin="0,0,0,5">
                    <Grid>
                        <!-- Grid lines -->
                        <Path Data="M0,15 L100,15 M0,30 L100,30 M0,45 L100,45" Stroke="#EEE" StrokeThickness="1" Stretch="Fill"/>
                        <!-- Usage Graph -->
                        <Polyline Points="{Binding HistoryPoints}" Stroke="#3498DB" StrokeThickness="1.5" Stretch="Fill"/>
                    </Grid>
                </Border>
                <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=UsageHistory}" FontSize="10" Foreground="#999" HorizontalAlignment="Right"/>

                <ProgressBar Height="4" Minimum="0" Maximum="100" Value="{Binding RamLoadPercent}" Background="#EEE" BorderThickness="0" Foreground="#3498DB" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- 2. Manual Clean -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Button Command="{Binding CleanCommand}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=CleanMemoryNow}" 
                    FontSize="14" FontWeight="Bold" Padding="0,10" 
                    Background="#3498DB" Foreground="Black" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="{Binding LastCleanStatus}" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="#555" FontSize="12"/>
        </StackPanel>

        <!-- 3. Features Tabs -->
        <TabControl Grid.Row="2" Margin="0,0,0,15" Height="180" Background="White" BorderBrush="#E0E0E0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Auto Clean Tab -->
            <TabItem Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=AutoClean}">
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Strategies}" FontWeight="Bold"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding IsStartupEnabled}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=RunOnStartup}" Margin="0"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/><ColumnDefinition Width="40"/></Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{Binding IsThresholdCleanEnabled}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=UsageGreater}" />
                        <Slider Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True"
                                Value="{Binding AutoCleanThreshold}" IsEnabled="{Binding IsThresholdCleanEnabled}"
                                VerticalAlignment="Center" Margin="5,0"/>
                        <TextBlock Grid.Column="2" Text="{Binding AutoCleanThreshold, StringFormat={}{0}%}" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{Binding IsTimeCleanEnabled}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Every}" />
                        <Slider Grid.Column="1" Minimum="0" Maximum="60" TickFrequency="1" IsSnapToTickEnabled="True"
                                Value="{Binding AutoCleanIntervalMinutes}" IsEnabled="{Binding IsTimeCleanEnabled}"
                                VerticalAlignment="Center" Margin="18,0,5,0"/>
                        <TextBlock Grid.Column="2" Text="{Binding AutoCleanIntervalMinutes, StringFormat={}{0} min}" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </TabItem>

            <!-- Whitelist Tab -->
            <TabItem Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Whitelist}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Saved Whitelist -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                        <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=IgnoredProcesses}" FontWeight="Bold" Margin="0,0,0,5"/>
                        
                        <ListBox Grid.Row="1" ItemsSource="{Binding Whitelist}" BorderThickness="1" BorderBrush="#EEE" Margin="0,0,0,5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                        <Button Content="x" Command="{Binding DataContext.RemoveWhitelistCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                CommandParameter="{Binding}" Margin="10,0,0,0" Padding="5,0" BorderThickness="0" Background="Transparent" Foreground="Red" FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewWhitelistItem, UpdateSourceTrigger=PropertyChanged}" Padding="5" VerticalContentAlignment="Center" ToolTip="Type name manually"/>
                            <Button Grid.Column="1" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Add}" Command="{Binding AddWhitelistCommand}" Padding="10,2" Margin="5,0,0,0"/>
                        </Grid>
                    </Grid>

                    <!-- Right: Active Processes -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=RunningProcesses}" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Content="â†»" Command="{Binding RefreshProcessesCommand}" HorizontalAlignment="Right" Padding="5,0" ToolTip="Refresh List"/>
                        </Grid>

                        <ListView Grid.Row="1" ItemsSource="{Binding RunningProcesses}" SelectedItem="{Binding SelectedRunningProcess}" BorderThickness="1" BorderBrush="#EEE">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Name}" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" ToolTip="{Binding InstanceCount, StringFormat='Instances: {0}'}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                    <Setter Property="ToolTip" Value="System Critical (Protected)"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsWhitelisted}" Value="True">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                    <Setter Property="ToolTip" Value="Already Whitelisted"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Action}" Width="60">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="+" Command="{Binding DataContext.AddSelectedToWhitelistCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                        CommandParameter="{Binding Name}" 
                                                        Padding="5,0" HorizontalAlignment="Center">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsWhitelisted}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsCritical}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Options Tab -->
            <TabItem Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Options}">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Notifications}" FontWeight="Bold" Margin="0,0,0,10"/>
                    <CheckBox IsChecked="{Binding ShowManualCleanNotification}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=ShowAfterManualClean}" Margin="0,0,0,5"/>
                    <CheckBox IsChecked="{Binding ShowAutoCleanNotification}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=ShowAfterAutoClean}" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Language}" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ComboBox ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage}" DisplayMemberPath="DisplayName" Width="200" HorizontalAlignment="Left"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- 4. Logs -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Margin="0,0,0,5">
                <TextBlock Text="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=EventLog}" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                <Button Command="{Binding ClearLogCommand}" Content="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Clear}" HorizontalAlignment="Right" Padding="8,2" FontSize="11"/>
            </Grid>
            
            <ListView Grid.Row="1" ItemsSource="{Binding Logs}" BorderThickness="1" BorderBrush="#EEE" FontSize="11" Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Time}" DisplayMemberBinding="{Binding Time}" Width="60"/>
                        <GridViewColumn Header="{Binding Source={x:Static local:LocalizedStrings.Instance}, Path=Message}" DisplayMemberBinding="{Binding Message}" Width="310"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
    </ScrollViewer>
</Window>
