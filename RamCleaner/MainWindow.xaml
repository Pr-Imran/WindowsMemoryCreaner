<Window x:Class="RamCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RamCleaner"
        mc:Ignorable="d"
        Title="Safe RAM Cleaner" Height="630" Width="450"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Stats -->
            <RowDefinition Height="Auto"/> <!-- Manual -->
            <RowDefinition Height="Auto"/> <!-- Tabs (Auto, Whitelist, Options) -->
            <RowDefinition Height="*"/>    <!-- Log -->
        </Grid.RowDefinitions>

        <!-- 1. Detailed Statistics & Graph -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="System Memory Status" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
                
                <!-- Stats Grid -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Used RAM" Foreground="#666" FontSize="11"/>
                        <TextBlock Text="{Binding UsedRamDisplay}" FontWeight="Bold" Foreground="#C0392B" FontSize="14"/>
                        <TextBlock Text="Available RAM" Foreground="#666" FontSize="11" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding FreeRamDisplay}" FontWeight="Bold" Foreground="#27AE60" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                         <TextBlock Text="Total RAM" Foreground="#666" FontSize="11"/>
                         <TextBlock Text="{Binding TotalRam}" FontWeight="SemiBold"/>
                         <TextBlock Text="Cached" Foreground="#666" FontSize="11" Margin="0,5,0,0"/>
                         <TextBlock Text="{Binding CachedRamDisplay}" FontSize="12"/>
                         <TextBlock Text="{Binding CommittedRamDisplay}" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Graph -->
                <Border BorderBrush="#EEE" BorderThickness="1" Background="#FAFAFA" Height="60" Margin="0,0,0,5">
                    <Grid>
                        <!-- Grid lines -->
                        <Path Data="M0,15 L100,15 M0,30 L100,30 M0,45 L100,45" Stroke="#EEE" StrokeThickness="1" Stretch="Fill"/>
                        <!-- Usage Graph -->
                        <Polyline Points="{Binding HistoryPoints}" Stroke="#3498DB" StrokeThickness="1.5" Stretch="Fill"/>
                    </Grid>
                </Border>
                <TextBlock Text="Usage History (60s)" FontSize="10" Foreground="#999" HorizontalAlignment="Right"/>

                <ProgressBar Height="4" Minimum="0" Maximum="100" Value="{Binding RamLoadPercent}" Background="#EEE" BorderThickness="0" Foreground="#3498DB" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- 2. Manual Clean -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Button Command="{Binding CleanCommand}" Content="Clean Memory Now" 
                    FontSize="14" FontWeight="Bold" Padding="0,10" 
                    Background="#3498DB" Foreground="Black" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="{Binding LastCleanStatus}" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="#555" FontSize="12"/>
        </StackPanel>

        <!-- 3. Features Tabs -->
        <TabControl Grid.Row="2" Margin="0,0,0,15" Height="180" Background="White" BorderBrush="#E0E0E0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Auto Clean Tab -->
            <TabItem Header="Auto Clean">
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBlock Text="Strategies" FontWeight="Bold"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding IsStartupEnabled}" Content="Run on Startup" Margin="0"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/><ColumnDefinition Width="40"/></Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{Binding IsThresholdCleanEnabled}" Content="Usage >" />
                        <Slider Grid.Column="1" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True"
                                Value="{Binding AutoCleanThreshold}" IsEnabled="{Binding IsThresholdCleanEnabled}"
                                VerticalAlignment="Center" Margin="5,0"/>
                        <TextBlock Grid.Column="2" Text="{Binding AutoCleanThreshold, StringFormat={}{0}%}" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions><ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{Binding IsTimeCleanEnabled}" Content="Every" />
                        <Slider Grid.Column="1" Minimum="0" Maximum="60" TickFrequency="1" IsSnapToTickEnabled="True"
                                Value="{Binding AutoCleanIntervalMinutes}" IsEnabled="{Binding IsTimeCleanEnabled}"
                                VerticalAlignment="Center" Margin="18,0,5,0"/>
                        <TextBlock Grid.Column="2" Text="{Binding AutoCleanIntervalMinutes, StringFormat={}{0} min}" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </TabItem>

            <!-- Whitelist Tab -->
            <TabItem Header="Whitelist">
                <Grid Margin="10">
                    <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding Whitelist}" BorderThickness="1" BorderBrush="#EEE" Margin="0,0,0,5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding}"/>
                                    <Button Content="x" Command="{Binding DataContext.RemoveWhitelistCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}" Margin="10,0,0,0" Padding="5,0" BorderThickness="0" Background="Transparent" Foreground="Red"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox Text="{Binding NewWhitelistItem, UpdateSourceTrigger=PropertyChanged}" Padding="5" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="Add" Command="{Binding AddWhitelistCommand}" Padding="10,2" Margin="5,0,0,0"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Options Tab -->
            <TabItem Header="Options">
                <StackPanel Margin="10">
                    <TextBlock Text="Notifications" FontWeight="Bold" Margin="0,0,0,10"/>
                    <CheckBox IsChecked="{Binding ShowManualCleanNotification}" Content="Show after Manual Clean" Margin="0,0,0,5"/>
                    <CheckBox IsChecked="{Binding ShowAutoCleanNotification}" Content="Show after Auto Clean" Margin="0,0,0,5"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- 4. Logs -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Margin="0,0,0,5">
                <TextBlock Text="Event Log" FontWeight="Bold" FontSize="12" Foreground="#333"/>
                <Button Command="{Binding ClearLogCommand}" Content="Clear" HorizontalAlignment="Right" Padding="8,2" FontSize="11"/>
            </Grid>
            
            <ListView Grid.Row="1" ItemsSource="{Binding Logs}" BorderThickness="1" BorderBrush="#EEE" FontSize="11">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="60"/>
                        <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="310"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</Window>
